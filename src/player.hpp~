#ifndef PLAYER_HPP
#define PLAYER_HPP
#include "SDL.h"

class Player
{
    SDL_Texture* PlayerTexture; //graphical representation of player
    SDL_Rect PlayerBox; //actual location and size data of player

public:
    Player();
    ~Player();
    void Render();
    void Shoot();
    void HandleInput( SDL_Event* e );
};




#endif
